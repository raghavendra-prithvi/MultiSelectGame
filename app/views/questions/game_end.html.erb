 <div class="container-narrow">
     <div class=" navbar-header text-center">
       <h1> FINAL SCORE </h1>
</div>
      <div class="jumbotron">
        <h2><%= @score.points %> </h2>
        <%=hidden_field_tag :score_points,@score.points, {:id=>"score_points" }%>
      </div>
      <div class="row marketing">
        <div class="col-lg-12" style"margin-top: 200px;">
             <p id='msg'></p>
          <a class="btn btn-share btn-lg text-center" href="#" onclick='postToFeed(); return false;'>FB<div id='fb-root'></div>
    </a>
          <a class="btn btn-share btn-lg text-center" href="/start">TWTR</a>
          <a class="btn btn-playagain btn-lg text-center" href="/start">PLAY AGAIN</a>
          <a class="btn btn-blank btn-lg btn-block" href="/highscores">HIGH SCORES </a>
